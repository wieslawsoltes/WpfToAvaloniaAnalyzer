<Window x:Class="WpfToAvaloniaAnalyzers.Sample.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Sample for Analyzer Testing" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <StackPanel Margin="20">
                <TextBlock Text="WPF Sample Application" FontSize="24" FontWeight="Bold" />
                <TextBlock Text="This application uses WPF controls that should be detected by the analyzer."
                          Margin="0,10,0,0" TextWrapping="Wrap"/>
                <Button Content="Click Me" Margin="0,20,0,0" Width="100" HorizontalAlignment="Left"/>
                <ListBox Margin="0,20,0,0" Height="150">
                    <ListBoxItem Content="Item 1" />
                    <ListBoxItem Content="Item 2" />
                    <ListBoxItem Content="Item 3" />
                </ListBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
